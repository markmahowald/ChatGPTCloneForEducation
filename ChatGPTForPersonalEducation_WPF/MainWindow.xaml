<Window x:Class="ChatGPTForPersonalEducation_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatGPTForPersonalEducation_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Start New Session" Click="StartNewSession_Click"/>
            <Button Content="Continue Session" Click="ContinueSession_Click"/>
            <Button Content="Retrieve All Sessions" Click="RetrieveAllSessions_Click"/>
            <TextBox Name="UserInputTextBox" Width="400" Height="30"/>
            <TextBlock Name="ResponseTextBlock" TextWrapping="Wrap" Width="400" Height="300"/>
        </StackPanel>
    </Grid>
</Window>
